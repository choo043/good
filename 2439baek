#include <iostream>

using namespace std;

int main() {
    int a, b, c, d;
    cin >> c;
    for(a = 0; a < c; a++)
    {
        for(b=0; b <= (c - a -2); b++)
        {
            cout << " ";
        }
        for(d=0; d <= a; d++)
        {
            cout << "*";
        }
        cout << "\n";
    }
}
